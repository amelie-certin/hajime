<div class="container">
  <h1>Hajime !</h1>
  <div class="row">
    <div class="col-sm-12">
      <%= link_to 'Create a new character', new_character_path, class: 'btn btn-dark' %>
      <%= link_to 'Armory', armory_index_path, class: 'btn btn-dark' %>
    </div>
  </div>
  <% @characters.each do |character| %>
    <%= image_tag character.avatar.url(:thumb) %>
  <% end %>

  <hr>

  <div class="row">
    <div class="col-sm-6">
      <%= form_for @fight, url: fight_index_path, remote: true do |f| %>
      <%= f.select :player_id, @list, include_blank: true %>
      <%= f.submit :Hajime!, class: 'btn btn-dark' %>
      <%= f.select :opponent_id, @list, include_blank: true %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="" id="fight_result"></div>
  </div>
</div>
